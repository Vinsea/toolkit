{
  "version": "1.1.0",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ],
  "changelogPreset": "@vinsea/conventional-changelog-angular",
  "command": {
    "publish": {
      "allowBranch": "main",
      "message": "chore: publish %v",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": "main",
      "message": "chore: :tada: bump version %v"
    }
  }
}